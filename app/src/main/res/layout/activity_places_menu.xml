<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:numColumns="auto_fit"
    android:rowCount="3"
    android:theme="@style/AppThemeWithNoBar"
    tools:context="tryhut.wpr.PlacesMenuActivity">

    <Button
        android:id="@+id/placesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text="button1" />

    <Button
        android:id="@+id/viewpointsButton"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="button1" />

    <Button
        android:id="@+id/itButton"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="button1" />


    <Button
        android:id="@+id/foodtrucksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button1" />

    <Button
        android:id="@+id/wcButton"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="button1" />

    <Button
        android:id="@+id/serviceButton"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="button1" />
</GridLayout>
