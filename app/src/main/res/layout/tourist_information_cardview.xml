<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/ti_cardview"
android:layout_width="match_parent"
android:layout_height="250dp"
android:layout_margin="5dp"
card_view:cardCornerRadius="4dp"
android:background="@color/primary_dark">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <TextView
        android:id="@+id/ti_name"
        android:layout_width="294dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nazwa"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/accent"
        android:textSize="18sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.504"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/ti_phonenumber"
        android:layout_width="77dp"
        android:layout_height="46dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:autoLink="phone"
        android:clickable="true"
        android:focusable="true"
        android:text="111111111"
        android:textAlignment="viewStart"
        android:textColor="@color/textColor"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.241"
        card_view:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ti_openinghours"
        android:layout_width="124dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="poniedziaÅ‚ek od do"
        android:textColor="@color/textColor"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.36"
        card_view:layout_constraintStart_toEndOf="@+id/ti_addressess"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/ti_addressess"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="adressss"
        android:textColor="@color/textColor"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/ti_name" />


    <TextView
        android:id="@+id/ti_emails"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColor"
        card_view:layout_constraintBottom_toTopOf="@+id/ti_phonenumber"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.237"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/ti_addressess"
        card_view:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/show_on_map_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/show_on_map"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0"
        android:background="@drawable/show_on_map_normal"/>

</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
